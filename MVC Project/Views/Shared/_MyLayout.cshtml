<!DOCTYPE HTML>
<html>
<head>
    <title>Massively by HTML5 UP</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="/assets/css/noscript.css" /></noscript>
    <style>
        .links li.active a {
            font-weight: bold;
            color: #007bff !important;
            border-bottom: 2px solid #007bff;
        }
    </style>
</head>
<body class="is-preload">

    <div id="wrapper" class="fade-in">

        <div id="intro">
            <h1>
                Academia<br />
                Management System
            </h1>
            <p>
                Comprehensive system for students, courses, departments, instructors.
            </p>
            <ul class="actions">
                <li><a href="#header" class="button icon solid solo fa-arrow-down scrolly">Continue</a></li>
            </ul>
        </div>

        <header id="header">
            <a asp-controller="Home" asp-action="Index" class="logo">Home</a>
        </header>

        <nav id="nav">
            <ul class="links">
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Students" ? "active" : "")">
                    <a asp-controller="Students" asp-action="Index" class="nav-link text-dark">Student</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Courses" ? "active" : "")">
                    <a asp-controller="Courses" asp-action="Index" class="nav-link text-dark">Course</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Departments" ? "active" : "")">
                    <a asp-controller="Departments" asp-action="Index" class="nav-link text-dark">Department</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Instructors" ? "active" : "")">
                    <a asp-controller="Instructors" asp-action="Index" class="nav-link text-dark">Instructors</a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "CourseStudents" ? "active" : "")">
                    <a asp-controller="CourseStudents" asp-action="Index" class="nav-link text-dark">CourseStudents</a>
                </li>
            </ul>
            <ul class="icons">
                <li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
                <li><a href="#" class="icon brands fa-github"><span class="label">GitHub</span></a></li>
            </ul>
        </nav>

        <div id="main">
            @RenderBody()

            <footer>
                <div class="pagination">
                    <a href="#" class="page active">1</a>
                    <a href="#" class="page">2</a>
                    <a href="#" class="page">3</a>
                    <span class="extra">&hellip;</span>
                    <a href="#" class="page">8</a>
                    <a href="#" class="page">9</a>
                    <a href="#" class="page">10</a>
                    <a href="#" class="next">Next</a>
                </div>
            </footer>
        </div>

        <div id="copyright">
            <ul>
                <li>&copy; Untitled</li>
                <li>Design: <a href="https://html5up.net">HTML5 UP</a></li>
            </ul>
        </div>
    </div>

    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/jquery.scrollex.min.js"></script>
    <script src="/assets/js/jquery.scrolly.min.js"></script>
    <script src="/assets/js/browser.min.js"></script>
    <script src="/assets/js/breakpoints.min.js"></script>
    <script src="/assets/js/util.js"></script>
    <script src="/assets/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
