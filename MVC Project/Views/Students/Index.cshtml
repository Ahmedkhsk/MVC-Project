@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("Admin") || User.IsInRole("HR"))
{
    <a class="btn btn-primary"  asp-action="Add">Add Student</a>
}
<br />

@await Html.PartialAsync("_SearchBox")

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Students!</h4>
        <p class="mb-0">No Students Were Added Yet.</p>
    </div>
}
else
{
    <table class="table table-bordered table-hover text-center" id="dataTable">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Grade
                </th>
                <th>
                    Department
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td>
                        @item.Grade
                    </td>
                    <td>
                        @item.Department.Name
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        @{
                            ViewData["DeleteAction"] = "Delete";
                            ViewData["DeleteId"] = item.Id;
                        }
                        @await Html.PartialAsync("~/Views/Shared/_DeleteButtonPartial.cshtml")
                        <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-trash3"></i> Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}

@section Scripts
{
    <script src="~/js/game-index.js" asp-append-version="true"></script>
}

