@model IEnumerable<CourseStudents>
@{
    ViewData["Title"] = "Course Students";
}

<h1>CourseStudents Index</h1>
@if (User.IsInRole("Admin") || User.IsInRole("HR"))
{
    <a class="btn btn-primary" asp-action="Add">CourseStudent</a>
}
<br />

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Course Students!</h4>
        <p class="mb-0">No Course Students Were Added Yet.</p>
    </div>
}
else
{
    <table class="table table-bordered table-hover text-center" id="dataTable">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Student Name</th>
                <th>Grade</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Course.Name</td>
                    <td>@item.Student.Name</td>
                    <td>@item.Student.Grade</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                        <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
})