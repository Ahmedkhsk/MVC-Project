@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments Index";
}

<h1>Departments Index</h1>
<a class="btn btn-primary" asp-action="Add">
    Add Department
</a>
<br />
<br />

@await Html.PartialAsync("_SearchBox")

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Departments!</h4>
        <p class="mb-0">No Departments Were Added Yet.</p>
    </div>
}
else
{
    <table class="table table-bordered table-hover text-center" id="dataTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                        <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}