@* _PaginationPartial.cshtml *@
@model (int currentPage, int totalPages, string actionName, object routeValues)
@if (Model.totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(Model.actionName, new { page = 1 })">First</a>
            </li>
            <li class="page-item @(Model.currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(Model.actionName, new { page = Model.currentPage - 1 })">Previous</a>
            </li>
            @for (int i = 1; i <= Model.totalPages; i++)
            {
                <li class="page-item @(i == Model.currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action(Model.actionName, new { page = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.currentPage == Model.totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(Model.actionName, new { page = Model.currentPage + 1 })">Next</a>
            </li>
            <li class="page-item @(Model.currentPage == Model.totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(Model.actionName, new { page = Model.totalPages })">Last</a>
            </li>
        </ul>
    </nav>
}
