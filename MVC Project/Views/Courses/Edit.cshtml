@model EditCourseVM
@{
    ViewData["Title"] = "Edit Course";
}

<h1>Edit Course</h1>

<form asp-action="Edit" asp-controller="Courses" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Course Name</label>
        <input asp-for="Name" class="form-control" placeholder="Course Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Degree" class="form-label">Maximum Degree</label>
        <input asp-for="Degree" class="form-control" placeholder="Max Degree" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MinimumDegree" class="form-label">Minimum Degree</label>
        <input asp-for="MinimumDegree" class="form-control" placeholder="Min Degree" />
        <span asp-validation-for="MinimumDegree" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Hours" class="form-label">Hours</label>
        <input asp-for="Hours" class="form-control" placeholder="Hours" />
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DepartmentId" class="form-label">Department</label>
        <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>